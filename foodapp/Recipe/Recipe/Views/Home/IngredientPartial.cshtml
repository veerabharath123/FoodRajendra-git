@model List<Ingredient>

<div class="bgimg">
    <div class="modal-header">
        <h5 class="modal-title text-light" id="staticBackdropLabel">Ingredients : @Model.Count</h5>
        <button type="button" class="btn-close bg-danger" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body tblb">
        <div class="row">
            <div class="col-6  text-info"><h5>Item Name</h5></div>
            <div class="col-6   text-info"><h5>Item Quantity</h5></div>
        </div>

        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="row ing">
                <div class="col-6">
                    @Html.TextBox($"Ingredients[{i}].INGREDIENT_NAME",Model[i].INGREDIENT_NAME,new {@class="form-control Name bgblur text-light",@placeholder="Name"})
                </div>
                <div class="col-6">
                    @Html.TextBox($"Ingredients[{i}].QUANTITY",Model[i].QUANTITY,new {@class="form-control Quantity bgblur text-light",@placeholder="Quantity"})
                </div>
                @Html.Hidden($"Ingredients[{i}].RECIPE_ID",Model[i].RECIPE_ID ,new {@class="recipe_id"})
                @Html.Hidden($"Ingredients[{i}].ID",Model[i].ID ,new {@class="id"})
            </div>

        }
    </div>
    <div class="modal-footer">
        <div class="row">
            <div class="col-12 d-flex justify-content-center align-items-center">
                <div class="btn-group">
                    @if (Model.Count > 1)
                    {
                        <button class="btn btn-danger" type="button" id="delbtn">
                            <i class="fa-solid fa-trash"></i>
                        </button>
                    }
                    <button class="btn btn-success" type="button" id="addbtn"><i class="fa-solid fa-plus"></i></button>
                </div>

            </div>
        </div>
    </div>

</div>
